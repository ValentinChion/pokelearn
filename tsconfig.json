{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "react-app/src/test/pokemon.js",
        "react-app/src/test/page.js",
        "react-app/src/test/pokedex.js",
        "scripts/prisma/realtime.ts",
        "scripts/prisma/queries.ts",
        "scripts/prisma/caching.ts"
    ],
    "exclude": ["node_modules"],
    "ts-node": {
        "esm": true,
        "compilerOptions": {
            "module": "commonjs",
            "moduleResolution": "node"
        }
    }
}
